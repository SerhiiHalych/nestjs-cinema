{
  "name": "nestjs-cinema",
  "version": "1.0.0",
  "description": "Example project for DDD and Clean Architecture approaches based on NestJS framework",
  "author": "Serhii Halych",
  "private": true,
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "dev": "nest start --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,scripts}/**/*.ts\" --fix",
    "typeorm": "ts-node ./node_modules/typeorm/cli",
    "typeorm:run-migrations": "npm run typeorm migration:run -- -d ./src/common/infrastructure/persistence/typeOrm.config.ts",
    "typeorm:generate-migration": "npm run typeorm -- -d ./src/common/infrastructure/persistence/typeOrm.config.ts migration:generate ./src/common/infrastructure/persistence/migrations/migration",
    "typeorm:create-migration": "npm run typeorm -- migration:create ./src/common/infrastructure/persistence/migrations/migration",
    "typeorm:revert-migration": "npm run typeorm -- -d ./src/common/infrastructure/persistence/typeOrm.config.ts migration:revert"
  },
  "dependencies": {
    "@nestjs/common": "10.3.0",
    "@nestjs/config": "3.1.1",
    "@nestjs/core": "10.3.0",
    "@nestjs/platform-express": "10.3.0",
    "@nestjs/typeorm": "10.0.1",
    "amqplib": "^0.10.3",
    "dotenv": "16.3.1",
    "lodash": "4.17.21",
    "pg": "8.11.3",
    "reflect-metadata": "0.1.13",
    "rimraf": "5.0.5",
    "rxjs": "7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "10.2.1",
    "@nestjs/schematics": "10.0.3",
    "@nestjs/testing": "10.3.0",
    "@types/amqplib": "^0.10.4",
    "@types/express": "4.17.21",
    "@types/lodash": "4.14.202",
    "@types/node": "20.10.5",
    "@typescript-eslint/eslint-plugin": "6.9.0",
    "@typescript-eslint/parser": "6.9.0",
    "eslint": "8.52.0",
    "eslint-import-resolver-typescript": "3.6.1",
    "eslint-plugin-deprecation": "2.0.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-jest": "27.2.3",
    "eslint-plugin-jest-formatting": "3.1.0",
    "eslint-plugin-jsdoc": "48.0.2",
    "eslint-plugin-prefer-arrow": "1.2.3",
    "prettier": "3.1.1",
    "source-map-support": "0.5.21",
    "ts-loader": "9.5.1",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.3.3"
  },
  "engines": {
    "node": "20.10.0"
  }
}
